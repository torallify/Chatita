{
  "expo": {
    "name": "Chatita",
    "slug": "chatita",
    "version": "1.0.0",
    "description": "Your health companion",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#F2F6FA"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.chatita.app"
    },
    "android": {
      "package": "com.chatita.app"
    },
    "plugins": [
      [
        "expo-image-picker",
        {
          "photosPermission": "Chatita needs access to your photos to upload menu images and meal photos.",
          "cameraPermission": "Chatita needs access to your camera to take photos of meals and menus."
        }
      ]
    ]
  }
}
